<!-- Start: page-wrapper. Ends in footer -->
<div class="page-wrapper">
  {% if preloader_option %}
    <div class="loader"></div>
  {% endif %}
<!-- Start: Header -->
<header class="header">
  <div class="header-main">
    <div class="container">
      <div class="header-main-container">
        {% if page.site_branding %}
          <div class="site-brand">
            {{ page.site_branding }}
          </div> <!--/.site-branding -->
        {% endif %}
        <div class="header-right">
          {% if animated_sidebar_option %}
            <div class="sliding-panel-icon">
              <i class="icon-align-left"></i>
            </div>
          {% endif %}
          {% if page.search_box %}
            {% include '@milipro/template-parts/search.html.twig' %}
          {% endif %}
          {% if page.primary_menu %}
            <div class="mobile-menu">
              <i class="icon-bars"></i>
            </div>
            <div class="primary-menu-wrapper">
              <div class="menu-wrap">
                <div class="close-mobile-menu">x</div>
                {{ page.primary_menu }}
              </div>
            </div>
          {% endif %}
          <!-- End: primary menu region -->
        </div> <!-- /.header-right -->
      </div> <!-- /.header-main-container -->
    </div> <!-- /.container -->
  </div> <!-- /.header-main -->
  {% if is_front and slider_show %}
    {% include '@milipro/template-parts/slider/' ~ slider_type ~ '.html.twig' %}
  {% elseif is_front and not slider_show %}
    <div class="sticky-header-height"></div>
  {% elseif not is_front %}
    <div class="sticky-header-height"></div>
    {% include '@milipro/template-parts/page_header.html.twig' %}
  {% endif %}
</header>
<!-- End: Header -->
