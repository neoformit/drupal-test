{#
/**
 * @file
 * MiliPro's theme implementation to display front page.
 *
 * The doctype, html, head and body tags are not in this template. Instead they
 * can be found in the html.html.twig template.
 *
 */
#}
{% include '@milipro/template-parts/header.html.twig' %}
{% include '@milipro/template-parts/highlighted.html.twig' %}
<div id="main-wrapper" class="main-wrapper">
  <div class="container">
    {% if front_sidebar %}
      <div class="main-container">
    {% endif %}
      <main id="main" class="page-content home-content">
        <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
        {% include '@milipro/template-parts/content_top.html.twig' %}
        {{ page.content }}
        {% include '@milipro/template-parts/content_home.html.twig' %}
        {% include '@milipro/template-parts/content_bottom.html.twig' %}
      </main>
    {% if front_sidebar %}
      {% include '@milipro/template-parts/sidebar_left.html.twig' %}
      {% include '@milipro/template-parts/sidebar_right.html.twig' %}
      </div><!-- /main-container -->
    {% endif %}
  </div> {# /.container #}
</div>{# /main-wrapper #}
{% if animated_sidebar_option %}
  {% include '@milipro/template-parts/sidebar_sliding.html.twig' %}
{% endif %}
{% include '@milipro/template-parts/footer.html.twig' %}
{% if slider_show %}
  <script>
  jQuery(document).ready(function ($) {
    $(".home-slider").owlCarousel({
      items: 1,
      loop: true,
      autoplay: true,
      autoplayTimeout: {{ slider_time }},
      nav: false,
      dots: {{ slider_dots }},
      animateOut: '{{ slider_animateout }}',
      animateIn: '{{ slider_animatein }}',
    });
    var windowwidth = $(window).width();
    var headermainheight = $('.header-main').outerHeight();
    // $('#slider').css('margin-top', -headermainheight);
    var sliderheight = $('#slider').height();
    $('.home-slider .owl-item').css('height', sliderheight);
    $('.slider-text-container .container').css('height', sliderheight);
    // slider height adjustment in tab devices
    if ( windowwidth < 992) {
      $('.slider-text-container').css('top', headermainheight);
      var slidercontainer = sliderheight - headermainheight;
      $('.slider-text-container .container').css('height', slidercontainer);
    }
  });
  </script>
{% endif %}
